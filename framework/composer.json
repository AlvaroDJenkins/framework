{
    "name": "emberfuse/framework",
    "type": "package",
    "description": "A simple PHP micro framework.",
    "keywords": ["php", "framework", "emberfuse"],
    "authors": [
        {
            "name": "Thavarshan Thayananthajothy",
            "email": "tjthavarshan@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^7.3",
        "psr/container": "^1.0",
        "symfony/var-dumper": "^5.1.2"
    },
    "require-dev": {
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^9.1",
        "friendsofphp/php-cs-fixer": "^2.16.3"
    },
    "autoload": {
        "psr-4": {
            "Emberfuse\\": "src/Emberfuse"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Emberfuse\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "test:unit": "phpunit --colors=always",
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test": [
            "@test:lint",
            "@test:unit"
        ]
    }
}
