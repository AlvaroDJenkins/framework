{
    "name": "emberfuse/framework",
    "type": "project",
    "description": "The Emberfuse Framework.",
    "keywords": ["php", "micro", "framework"],
    "authors": [
        {
            "name": "Thavarshan Thayananthajothy",
            "email": "tjthavarshan@gmail.com",
            "homepage": "https://thavarshan.com"
        }
    ],
    "support": {
        "issues": "https://github.com/emberfuse/framework/issues",
        "source": "https://github.com/emberfuse/framework"
    },
    "license": "MIT",
    "require": {
        "php": "^7.3.0",
        "ext-json": "*",
        "monolog/monolog": "^2.1",
        "psr/container": "^1.0",
        "psr/http-message": "^1.0",
        "psr/log": "^1.1",
        "symfony/debug": "^4.4",
        "symfony/error-handler": "^5.1",
        "symfony/finder": "^5.1",
        "symfony/http-foundation": "^5.1",
        "symfony/http-kernel": "^5.1",
        "symfony/routing": "^5.1",
        "symfony/var-dumper": "^5.1.2",
        "symfony/yaml": "^5.1",
        "vlucas/phpdotenv": "^5.1"
    },
    "require-dev": {
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^9.1"
    },
    "autoload": {
        "psr-4": {
            "Emberfuse\\": "src/Emberfuse"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Emberfuse\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "test:unit": "phpunit --colors=always",
        "test": [
            "@test:unit"
        ]
    }
}
